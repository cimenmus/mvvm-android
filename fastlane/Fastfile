        app: "1:1087940686958:android:64e91bdf7064a92bb6627f",
        groups: "qa-team"
      )

    # sh "your_script.sh"
    # ...
  end

    ############## UPLOAD TO GOOGLE PLAY #################

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean assembleRelease")
    upload_to_play_store
  end

