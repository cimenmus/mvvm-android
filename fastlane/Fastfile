    ############### START TEST ################

  desc "Runs all the tests"
    lane :test do
      gradle(task: "test")
    end

  desc "Runs all the Unit Tests on Release variant"
  lane :unitTests do
    gradle(task: "runUnitTests")
  end

  desc "Runs all the Instrumented(Android) Tests on Release and Debug variants. An android device has to be connected."
  lane :androidTests do
    gradle(task: "runAndroidTests")
  end

  desc "Runs all Unit Tests and Android Tests. An android device has to be connected."
  lane :allTests do
    gradle(task: "runAllTests")
  end

    ############## UPLOAD TO FIREBASE APP DISTRIBUTION #################

  desc "Submit a new Beta Build to Firebase App Distribution"
  lane :beta do
    # Adjust the `build_type` and `flavor` params as needed to build the right APK for your setup
    # To get a list of all available parameters for the gradle action, run: fastlane action gradle
    # gradle(task: "clean assembleRelease")
    gradle(
